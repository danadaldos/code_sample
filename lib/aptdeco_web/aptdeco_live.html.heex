<.form let={f} for={:number_of_products} phx-change="change_number_of_products" >
  <%= label f, :number_of_products %>
  <%= select f, :number, [10, 25, 50, 100] %>
</.form>
<table>
  <%= for row <- @rows do %>
    <tr>
      <%= for product <- row.entries do %>
        <.product_card product={product} />
      <% end %>
    </tr>
  <% end %>
</table>
